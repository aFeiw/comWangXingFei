:root{
  --c-brand #23d0d0
  --c-brand-light #1dbdd2
  --vp-c-brand: #0886DE;
  --vp-button-brand-border:#6BB6EB;
  --vp-button-brand-bg: #0886DE;
  --vp-c-brand-dark: #399EE5;
}

// 主页按钮样式 - 保持原有尺寸和形状，只添加颜色和效果
.VPHomeHero .actions .VPButton {
  transition: all 0.3s ease !important;
}

.VPHomeHero .actions .VPButton.brand {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  color: white !important;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4) !important;
}

.VPHomeHero .actions .VPButton.brand:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6) !important;
}

.VPHomeHero .actions .VPButton.alt {
  color: var(--vp-c-brand) !important;
  background: transparent !important;
}

.VPHomeHero .actions .VPButton.alt:hover {
  background: var(--vp-c-brand) !important;
  color: white !important;
  transform: translateY(-2px) !important;
}

@media (max-width: 768px) {
  .VPHomeHero .actions {
    flex-direction: column !important;
    align-items: center !important;
  }
}

.home-features .container h2{
  line-height 56px
  padding-bottom 0
  &:before{
    content: '';
    position: absolute;
    left: 4px;
    top: 12px;
    width: 26px;
    height: 26px;
    background-image: url(/eletron.png);
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
  }
  &:after{
    display none
  }
}
p.description{
  font-size 1.4rem !important
}
#main-title{
  color var(--c-brand)
  font-weight bold
  letter-spacing 0.2rem
  margin-bottom 10px
}
.nav-bar a.nav-bar-title{
  color var(--c-brand)!important
}
a.VPButton.medium.brand {
    font-weight: 800!important;
}
a.VPButton.medium.alt{
  font-weight: 520!important;
}
.item .VPFeature[data-v-549c013f] {
    border: 1px solid var(--vp-c-bg-soft);
    border-radius: 12px!important;
    padding: 24px!important
    height: 100%!important;
    cursor: pointer!important;
}
div.icon {
    width: 100%!important;
    height: 48px!important;
    font-size: 24px!important;
    background-color:#0886de!important;
    color:#fff!important;
}
.item .VPFeature .title[data-v-549c013f] {
    line-height: 24px!important;
    font-size: 16px!important;
    font-weight: 600!important;
  
}
.item .VPFeature .details {
    color:var(--vp-c-text-2) !important;
}
.VPNavBarMenuGroup .button span:hover{
   color:var(--vp-c-brand)!important;
}
 
nav.VPNavBarMenu.menu a,button {
    font-size: 15px!important;
}
nav.VPNavBarMenu.menu div span{
    font-size: 15px!important;
}
aside.VPSidebar::-webkit-scrollbar {
    width: 0!important;
    height: 0!important;
}

p > img {
  @apply border
}

/* Empty lines are not rendered without this tweak. */
pre code span.line:not(:last-child) {
  min-height: 1.5rem;
}

a.title{
color: #606266 !important;
line-height: initial !important;
} 
img.VPImage.logo {
    margin-bottom: 0.5vh !important;
}
.VPButton.brand[data-v-2dba8ca9]:hover {
    border-color: #2fbcff !important;
    color: var(--vp-button-brand-hover-text);
    background-color: #2fbcff !important;
}
a.VPButton.medium.brand:hover{
    border-color: #2fbcff !important;
    color: var(--vp-button-brand-hover-text);
    background-color: #2fbcff !important;
}

p.text {
        background: linear-gradient(to right, red, #0886de);
        -webkit-background-clip: text;
        color: transparent;
        display: inline-block;
}
span.clip{
   background-image: -webkit-linear-gradient(45deg, #0886de, #1cbbb4) !important;
   -webkit-background-clip: text !important;
   -webkit-text-fill-color: transparent !important;
}

.image-src {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) !important;
    max-width: 100%;
    height: auto;
}

/* 确保图片容器居中 */
.VPHomeHero .image {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
}

 
div#VPContent {
    margin-top: 2vh !important;
}

